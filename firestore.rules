rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // ATENÇÃO: Regra insegura apenas para fins de teste.
      // Permite que qualquer pessoa, autenticada ou não, leia e escreva todos os dados.
      allow read, write: if true;
    }
  }
}
